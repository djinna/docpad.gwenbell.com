@font-face {
	font-family: 'Open Sans';
	src: url(/vendor/twitter-bootstrap/font/OpenSans-Regular.ttf);
}

body
  background-image url("/sketch.png")
  padding-top 60px
  padding-bottom 40px


h1, h2, h3, h4 {
  color: #444;
  text-transform: uppercase;
	font-family: 'Open Sans';
} 

p, li 
	font-weight 400
	font-family 'Open Sans'

table
  tfoot, tbody
    th
      border-top 1px solid #DDD

footer
  padding-bottom 30px

.row-fluid > .span-fixed-sidebar
  margin-left 290px

a, a:link 
  color: #72166B

a:hover
  color: #000

.stream p:first-child
  font-size 2em

.centerimg
  width 10em
  margin-left auto 
  margin-right auto

.gradient 
  width 100%
  background: #c06;
  background: linear-gradient(45deg, #c06, #636)
  background: -webkit-gradient(linear, left bottom, right top, from(#c06), to(#636));
  margin-top: -2em
  margin-bottom 2em
  padding-top 2.1em
  padding-bottom .5em
  height 10em


.img-circle
  border 3px solid white

